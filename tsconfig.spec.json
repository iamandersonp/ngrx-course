{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["**/*.spec.ts"],
  "exclude": ["plugins/", "cypress/", "cypres.config.ts"]
}
